@page
@model PomodoroTracker.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - PomodoroTracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/auth.css" />
</head>
<body>
    <div class="auth-bg" style="background-image:url('https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=1350&q=80');">
        <div class="auth-card" role="main" aria-labelledby="loginTitle">
            <h2 id="loginTitle" class="text-center">Welcome Back</h2>

            <form method="post">
                @* keep ReturnUrl so we can come back where we were *@
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" for="RememberMe">Remember me</label>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>

            <p class="mt-3 text-center-small">
                Don’t have an account? <a asp-page="/Account/Register" class="small-link">Register here</a>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>







